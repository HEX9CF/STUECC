<view>
  <rich-text nodes="{{ title }}"></rich-text>
  <rich-text nodes="{{ hr }}"></rich-text>
  <view class="page-section page-section-gap">
    <map
      id="myMap"
      style="width: 100%; height: 300px;"
      latitude="{{latitude}}"
      longitude="{{longitude}}"
      markers="{{markers}}"
      covers="{{covers}}"
      show-location="true"
      enable-traffic="true"
    ></map>
  </view>
  <rich-text nodes="<br>"></rich-text>
  <view class="btn-area">
    <!-- <button bindtap="getCenterLocation" class="page-body-button" type="primary">获取位置</button> -->
    <!-- <button bindtap="moveToLocation" class="page-body-button" type="primary">移动位置</button> -->
    <!-- <button bindtap="translateMarker" class="page-body-button" type="primary">移动标注</button> -->
    <button bindtap="includePoints" class="page-body-button" type="primary">定位至公交站</button>
  </view>
  <rich-text nodes="{{ hr }}"></rich-text>
  <rich-text nodes="{{ bus }}" space="nbsp"></rich-text>
